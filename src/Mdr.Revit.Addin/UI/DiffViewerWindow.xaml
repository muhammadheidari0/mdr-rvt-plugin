<Window x:Class="Mdr.Revit.Addin.UI.DiffViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sync Preview"
        Height="500"
        Width="900"
        MinHeight="420"
        MinWidth="720"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Margin="0,0,0,8"
                   FontWeight="SemiBold"
                   Text="Review changes before applying to Revit" />

        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Anchor"
                                    Width="260" />
                <DataGridTextColumn Header="State"
                                    Width="120" />
                <DataGridTextColumn Header="Details"
                                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Width="90"
                    Margin="0,0,8,0"
                    Content="Apply" />
            <Button Width="90"
                    IsCancel="True"
                    Content="Close" />
        </StackPanel>
    </Grid>
</Window>
