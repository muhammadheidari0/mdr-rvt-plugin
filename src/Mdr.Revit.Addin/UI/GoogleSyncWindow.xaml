<Window x:Class="Mdr.Revit.Addin.UI.GoogleSyncWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Google Sheets Sync"
        Height="640"
        Width="920"
        MinHeight="520"
        MinWidth="760"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Margin="0,0,0,8"
                   FontWeight="SemiBold"
                   Text="Sync Revit Schedule <-> Google Sheets" />

        <Grid Grid.Row="1"
              Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Grid.Column="0"
                        Orientation="Horizontal"
                        Margin="0,0,12,8">
                <TextBlock Width="110"
                           VerticalAlignment="Center"
                           Text="Direction" />
                <ComboBox Width="210"
                          ItemsSource="{Binding Directions}"
                          SelectedItem="{Binding Direction}" />
            </StackPanel>

            <StackPanel Grid.Row="0"
                        Grid.Column="1"
                        Orientation="Horizontal"
                        Margin="0,0,0,8">
                <TextBlock Width="110"
                           VerticalAlignment="Center"
                           Text="Schedule" />
                <ComboBox Width="300"
                          ItemsSource="{Binding ScheduleNames}"
                          SelectedItem="{Binding SelectedScheduleName}" />
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        Margin="0,0,0,8">
                <TextBlock Width="110"
                           VerticalAlignment="Center"
                           Text="Spreadsheet ID" />
                <TextBox MinWidth="610"
                         Text="{Binding SpreadsheetId}" />
            </StackPanel>

            <StackPanel Grid.Row="2"
                        Grid.Column="0"
                        Orientation="Horizontal"
                        Margin="0,0,12,8">
                <TextBlock Width="110"
                           VerticalAlignment="Center"
                           Text="Worksheet" />
                <TextBox Width="210"
                         Text="{Binding WorksheetName}" />
            </StackPanel>

            <StackPanel Grid.Row="2"
                        Grid.Column="1"
                        Orientation="Horizontal"
                        Margin="0,0,0,8">
                <TextBlock Width="110"
                           VerticalAlignment="Center"
                           Text="Anchor Column" />
                <TextBox Width="300"
                         Text="{Binding AnchorColumn}" />
            </StackPanel>

            <StackPanel Grid.Row="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Orientation="Horizontal">
                <CheckBox Content="Preview only"
                          Margin="0,0,16,0"
                          IsChecked="{Binding PreviewOnly}" />
                <CheckBox Content="Authorize interactively (OAuth)"
                          IsChecked="{Binding AuthorizeInteractively}" />
            </StackPanel>
        </Grid>

        <DataGrid Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  ItemsSource="{Binding ColumnMappings}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sheet Column"
                                    Binding="{Binding SheetColumn}"
                                    Width="*" />
                <DataGridTextColumn Header="Revit Parameter"
                                    Binding="{Binding RevitParameter}"
                                    Width="*" />
                <DataGridCheckBoxColumn Header="Editable"
                                        Binding="{Binding IsEditable}"
                                        Width="120" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Width="130"
                    Margin="0,0,8,0"
                    Content="Refresh Schedules" />
            <Button Width="120"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Content="Sync to Google" />
            <Button Width="90"
                    IsCancel="True"
                    Content="Close" />
        </StackPanel>
    </Grid>
</Window>
