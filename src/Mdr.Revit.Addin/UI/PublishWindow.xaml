<Window x:Class="Mdr.Revit.Addin.UI.PublishWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Publish Selected Sheets"
        Height="560"
        Width="860"
        MinHeight="420"
        MinWidth="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0,0,0,10">
            <TextBlock VerticalAlignment="Center"
                       FontWeight="SemiBold"
                       Text="Selected Sheets:" />
            <TextBlock VerticalAlignment="Center"
                       Margin="6,0,0,0"
                       Text="{Binding SelectedCount}" />
            <CheckBox Margin="24,0,0,0"
                      VerticalAlignment="Center"
                      IsChecked="{Binding IncludeNative}"
                      Content="Include native export" />
            <CheckBox Margin="16,0,0,0"
                      VerticalAlignment="Center"
                      IsChecked="{Binding RetryFailedItems}"
                      Content="Retry failed items" />
        </StackPanel>

        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Extended"
                  SelectionUnit="FullRow"
                  ItemsSource="{Binding SheetRows}">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Publish"
                                        Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="90" />
                <DataGridTextColumn Header="Sheet Number"
                                    Binding="{Binding SheetNumber}"
                                    Width="170" />
                <DataGridTextColumn Header="Sheet Name"
                                    Binding="{Binding SheetName}"
                                    Width="*" />
                <DataGridTextColumn Header="Revision"
                                    Binding="{Binding RequestedRevision}"
                                    Width="120" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Width="120"
                    Margin="0,0,8,0"
                    Content="Refresh Sheets" />
            <Button Width="100"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Content="Publish" />
            <Button Width="90"
                    IsCancel="True"
                    Content="Cancel" />
        </StackPanel>
    </Grid>
</Window>
