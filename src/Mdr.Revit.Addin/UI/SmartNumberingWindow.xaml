<Window x:Class="Mdr.Revit.Addin.UI.SmartNumberingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Numbering"
        Height="420"
        Width="760"
        MinHeight="360"
        MinWidth="640"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Margin="0,0,0,8"
                   FontWeight="SemiBold"
                   Text="Rule-based element numbering (local Revit scan)" />

        <TextBox Grid.Row="1"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Text="{Block}{Level}-{CategoryCode}{SubcategoryCode}{Sequence:5}" />

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <Button Width="90"
                    Margin="0,0,8,0"
                    Content="Preview" />
            <Button Width="80"
                    Margin="0,0,8,0"
                    Content="Apply" />
            <Button Width="90"
                    IsCancel="True"
                    Content="Close" />
        </StackPanel>
    </Grid>
</Window>
